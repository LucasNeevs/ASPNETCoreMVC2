@using Microsoft.AspNetCore.Http;

@model List<Site01.Models.Word>

@{
    string Login = Context.Session.GetString("Login");
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="eng">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Word - @ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .myMain {
            height: 100%;
            background-color: darkslateblue;
            color: blueviolet;
            font-family: Roboto;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 50px;
            text-shadow: 5px 5px 5px #342046;
        }

        .myForm {
            padding: 40px;
        }

        .registerContainer {
            display: flex;
            padding: 20px 0px;
            align-items: center;
            justify-content: space-between;
        }

        .myBtn {
            padding: 10px;
            background-color: cornflowerblue;
            color: snow;
        }

        .updateBtn {
            background-color: green;
            color: snow;
        }

        .excludeBtn {
            background-color: red;
            color: snow;
        }

        .mySpan {
            font-size: 1rem;
            font-weight: bold;
        }

        .myBrand {
            cursor: pointer;
            font-weight: 600;
            color: #000;
        }

        .myHeader {
            background-color: #CCC;
            padding: 10px 20px;
        }

        .myHeaderLinks {
            color: #000;
        }

        .myFooter {
            padding: 10px 0px;
            background-color: #CCC;
        }

        .myFooterInternal {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body style="margin:0;padding:0">
    <header class="myHeader">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand myBrand" href="/word">Words List</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link myHeaderLinks" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>

                    @if (Login != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link myHeaderLinks" href="/word">Words</a>
                        </li>
                        <li class="nav-items">
                            <a class="nav-link myHeaderLinks" href="/home/logout">Logout</a>
                        </li>
                    }
                    else
                    {

                        <li class="nav-items">
                            <a class="nav-link myHeaderLinks" href="/home/login">Login</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link myHeaderLinks" href="/contact">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
    <div class="myFooter">
        <div class="col-md-12 col-sm-12 myFooterInternal">
            Copyright &copy; 2021 - @DateTime.Now.Year - All directs reserved
        </div>
    </div>
</footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

